            <img src="@Url.Content("~/Images/book5.jpg")" class="img-fluid rounded" alt="Book Cover 5" />
        </div>
        <div class="col-md-4">
            <img src="@Url.Content("~/Images/book6.jpg")" class="img-fluid rounded" alt="Book Cover 6" />
        </div>
        <div class="col-md-4">
            <img src="@Url.Content("~/Images/book1.jpg")" class="img-fluid rounded" alt="Book Cover 1" />
        </div>
        <div class="col-md-4">
            <img src="@Url.Content("~/Images/book2.jpg")" class="img-fluid rounded" alt="Book Cover 2" />
        </div>
        <div class="col-md-4">
            <img src="@Url.Content("~/Images/book3.jpg")" class="img-fluid rounded" alt="Book Cover 3" />
        </div>

    </div>
</div>
