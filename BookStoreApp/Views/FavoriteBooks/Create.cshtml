@model BookStoreApp.Models.FavoriteBook

@{
    ViewBag.Title = "Create Favorite Book";
}

<h2>Share Your Favorite Book with Us!</h2>

@using (Html.BeginForm("Create", "FavoriteBooks", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label for="FirstName">First Name</label>
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="LastName">Last Name</label>
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="ImageFile">Upload Favorite Book Image</label>
        <input type="file" id="ImageFile" name="ImageFile" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}
