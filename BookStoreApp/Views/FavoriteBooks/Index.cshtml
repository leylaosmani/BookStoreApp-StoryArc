@model IEnumerable<BookStoreApp.Models.FavoriteBook>

@{
    ViewBag.Title = "Favorite Books";
}

<h2>Take a Look at Your Favorites!</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>

                    @if (item.ImagePath != null)
                    {
                        <img src="@Url.Content(item.ImagePath)" alt="Book Image" style="width:100px;height:auto;" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>